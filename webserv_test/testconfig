server {
	listen 127.0.0.1:8080;

	server_name www.example.com example.com;

	client_max_body_size 5G;

	location / {
		allowed_methods GET POST;
		root /testfolder;
		cgi_pass /usr/bin/php-cgi;
		autoindex on;
	}
}

server {
	listen 127.0.0.1:8085;
	error_pages 201 /testwebpage.html;

	location / {
		allowed_methods GET POST;
	}
}